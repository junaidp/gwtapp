<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<head>
			<link href="Metro-UI-CSS-master/build/css/metro.css" rel="stylesheet" />
		</head>
		<body class="metro">
			<div style="padding-left:40%; padding-top:15%">
				<div class="padding20">
					<form>
						<h4 class="text-light blue">Forgot Username</h4>
						<div>
							<g:Label ui:field="lblError" styleName="error"></g:Label>
						</div>
						<div>
							<span class="mif-user prepend-icon"></span>
							<g:TextBox ui:field="txtEmail" styleName="input-control text" />
						</div>
						<div class="form-actions">
							<g:Button styleName="button primary" ui:field="btnSubmit"> Submit </g:Button>

						</div>
						
					</form>
				</div>

			</div>
		</body>
		<div style="width:100%">
			<g:Label styleName="labelStyle centeredText blue bold hover" ui:field="btnBack">Back</g:Label>
		</div>

	</g:HTMLPanel>

</ui:UiBinder> 