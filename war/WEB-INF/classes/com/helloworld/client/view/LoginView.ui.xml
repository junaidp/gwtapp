<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>

		<div class="loginArea" ui:field="loginArea"	style = "width: 855px ,margin:0 auto, text-align: center">
			<g:HorizontalPanel height="150px">
				<g:Label />
				<g:VerticalPanel styleName="border" width="500px">
					<g:HTMLPanel styleName="headerSignin" height="30px"
						width="500px">
						Sign in
					</g:HTMLPanel>

					<g:VerticalPanel styleName="fieldsStyle">
						<g:HorizontalPanel width="290px">
							<g:Label ui:field="lblError" styleName="error"
								height="16px" width="279px" />
						</g:HorizontalPanel>
						<g:Label ui:field=" lblUserName " width="50px" styleName="h1"
							text="Username">
							username
						</g:Label>
						<g:HorizontalPanel>
							<g:TextBox ui:field="txtUserName" width="250px" height="20px" text="test"/>
							<g:Hyperlink styleName="register">
							</g:Hyperlink>
						</g:HorizontalPanel>
					</g:VerticalPanel>

					<g:VerticalPanel styleName="fieldsStyle">
						<g:Label ui:field=" lblPassword " width="50px" text="Password" >
							password
						</g:Label>
						<g:HorizontalPanel>
							<g:PasswordTextBox ui:field="txtPassword"
								width="250px" height="20px" text="test"/>
							<g:Hyperlink styleName="register"></g:Hyperlink>
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:HorizontalPanel spacing="10">
						<g:HorizontalPanel width="100px"></g:HorizontalPanel>
						<g:Button ui:field="btnSubmit" styleName="btnStyle"
							width="90px" height="28px">
							Sign in
						</g:Button>
					<g:VerticalPanel>
					<g:Anchor styleName="hover" ui:field="forgotPassword">Forgot password</g:Anchor>
					<g:Anchor styleName="hover" ui:field="registerAccount">Register new account</g:Anchor>
					</g:VerticalPanel>
					
					</g:HorizontalPanel>

				</g:VerticalPanel>
			</g:HorizontalPanel>
		</div>
		<div>
		
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 