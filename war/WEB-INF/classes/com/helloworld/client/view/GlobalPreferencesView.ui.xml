<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:G="urn:import:com.helloworld.client.view.GlobalPreferencesPanels" xmlns:v="urn:import:com.helloworld.client.view">
	
	<ui:with type="com.helloworld.client.view.ApplicationConstants" field="appConstants"></ui:with>
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalSplitPanel width="100%" ui:field="splitPanel">
		
			<g:Tree ui:field='treePreferences'>
				<g:TreeItem text='My Account' ui:field="treeItemMyAccount">
					<g:TreeItem text='View Plan' ui:field="treeItemViewPlan" HTML="View Plan"  />
					<g:TreeItem text='View Registration' ui:field="treeItemViewRegistration" HTML="View Registration"/>
					<g:TreeItem text='Edit Registration' ui:field="treeItemEditRegistration" HTML="Edit Registration"/>
					<g:TreeItem text='Usage' ui:field="treeItemUsage" HTML="Usage" />
				</g:TreeItem>

				<g:TreeItem text='Header'>

				</g:TreeItem>

				<g:TreeItem text='Footer'>

				</g:TreeItem>

			</g:Tree>
			
			<g:FlowPanel>
			<g:Label >Right side</g:Label>
			</g:FlowPanel>
		</g:HorizontalSplitPanel>
		<div style="padding-left60%">
		<g:Button styleName="button primary inLine" ui:field="btnCancel"> Cancel </g:Button>
		<g:Button styleName="button primary inLine" ui:field="btnSave"> Save </g:Button>
		</div>	
	</g:HTMLPanel>
</ui:UiBinder> 