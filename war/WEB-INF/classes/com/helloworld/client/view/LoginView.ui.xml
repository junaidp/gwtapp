	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<head>
			<link href="Metro-UI-CSS-master/build/css/metro.css" rel="stylesheet" />
			<link href="Metro-UI-CSS-master/build/css/metro.min.css" rel="stylesheet" />
			<link href="Metro-UI-CSS-master/build/css/metro.responsive" rel="stylesheet" />
			<link href="Metro-UI-CSS-master/build/css/metro.schemes" rel="stylesheet" />
			<link href="Metro-UI-CSS-master/build/css/metro.icons" rel="stylesheet" />

			<script src="jquery.js"></script>
			<script src="Metro-UI-CSS-master/build/js/metro.js"></script>
		</head>
		<body class="metro">
			<div style="padding-left:40%; padding-top:15%">
				<div class="padding20">
					<form>
						<h4 class="text-light">Login</h4>
						<div>
							<g:Label ui:field="lblError" styleName="error"></g:Label>
						</div>
						<div>
							<span class="mif-user prepend-icon"></span>
							<g:TextBox ui:field="txtUserName" styleName="input-control text"
								text="user1" />
						</div>
						<div>
							<span class="mif-lock prepend-icon"></span>
							<g:PasswordTextBox ui:field="txtPassword" text="user1"
								styleName="input-control text" />
						</div>

						<div class="form-actions">
							<g:Button styleName="button primary" ui:field="btnSubmit">Login</g:Button>

						</div>
						<div>
							<g:Label styleName="labelStyle centeredText blue bold hover"
								ui:field="btnForgotPassword">Forgot password</g:Label>
						</div>
					</form>
				</div>

			</div>
		</body>













